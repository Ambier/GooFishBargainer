# 咸鱼比价助手环境配置

# DeepSeek API配置
DEEPSEEK_API_KEY=your_access_llm_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI API配置（可选，如果使用OpenAI）
OPENAI_API_KEY=your_openai_api_key_here

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 浏览器配置
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# 任务配置
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=1800
MAX_PRODUCTS_PER_SEARCH=20
MAX_NEGOTIATIONS_PER_TASK=5

# 咸鱼配置
XIANYU_BASE_URL=https://www.goofish.com/
XIANYU_SEARCH_DELAY=2
XIANYU_NEGOTIATION_DELAY=5

# WebSocket配置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100 
